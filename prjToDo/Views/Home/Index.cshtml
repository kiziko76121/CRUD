@model IEnumerable<prjToDo.Models.tToDo>

@{
    ViewBag.Title = "行事曆";
}

<h2>行事曆</h2>

<p>
    @Html.ActionLink("行事曆", "Create")
</p>
<table class="table">
    <tr>
        <th>
            編號
        </th>
        <th>
            標題
        </th>
        <th>
            圖示
        </th>
        <th>
            日期
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
           <img src="~/images/@item.Image" width="32"/>
        </td>
        <td>
            @DateTime.Parse(item.Date.ToString()).ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id = item.Id }) |
            @Html.ActionLink("刪除", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
